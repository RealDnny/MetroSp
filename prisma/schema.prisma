generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int          @id @default(autoincrement())
  name      String
  email     String       @unique
  items     Item[]       // Relacionamento com os itens perdidos/achados
}

model Item {
  id          Int                     @id @default(autoincrement())
  name        String
  description String
  status      String   // 'lost' ou 'found'
  location    String
  userId      Int?
  user        User?                  @relation(fields: [userId], references: [id])  // Usu√°rio que cadastrou o item
  images      Image[]                // Relacionamento com a tabela de imagens
  createAt    DateTime               @default(now())
  updatedAt   DateTime               @updatedAt
}

model Image {
  id               Int           @id @default(autoincrement())
  nameImg          String
  pathImg          String 
  itemId           Int
  item             Item          @relation(fields: [itemId], references: [id] )  
  dataUpload       DateTime      @default(now())
}